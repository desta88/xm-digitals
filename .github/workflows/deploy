name: Deploy Angular to GitHub Pages

on:
  push:
    branches: [ master ]

jobs:
  build-deploy:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
      
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
        cache: 'npm'
        
    - name: Install dependencies
      run: npm ci
      
    - name: Build with custom output path
      run: npm run build -- --prod --base-href=/ --output-path=dist/xmdigitals
      
    - name: Create CNAME file
      run: echo "xmdigitals.com" > dist/xmdigitals/CNAME
      
    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: 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
        publish_dir: ./dist/xmdigitals
        enable_jekyll: false
